pipeline {
    agent any

    environment {
        ALLURE_RESULTS_DIR = 'allure-results'
        ALLURE_REPORT_DIR = 'allure-report'
    }

    stages {

        stage('Run Entire Suite') {
            steps {
                echo "Run Entire Suite"
                script {
                    def firstBuildStatus = 'SUCCESS'
                    def secondBuildStatus = 'SUCCESS'

                    // Run the first test suite
                    try {
                        powershell "./gradlew test --tests com.example.runners.Runner"
                    } catch (Exception e) {
                        echo "First Build Failed"
                        firstBuildStatus = 'FAILURE'
                    }

                    // Run the second test suite
                    try {
                        powershell "./gradlew test --tests com.example.runners.ReRunner"
                    } catch (Exception e) {
                        echo "Second Build Failed"
                        secondBuildStatus = 'FAILURE'
                    }

                    // Set overall build result based on the test statuses
                    if (firstBuildStatus == 'FAILURE' || secondBuildStatus == 'FAILURE') {
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }
        
        stage('Generate Allure Report') {
            steps {
                allure([
                    includeProperties: false, 
                    jdk: '', 
                    properties: [], 
                    reportBuildPolicy: 'ALWAYS', 
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            script {
                allure([
                    includeProperties: false, 
                    jdk: '', 
                    properties: [], 
                    reportBuildPolicy: 'ALWAYS', 
                    results: [[path: 'admin/allure-results']]
                ])
            }
            emailext(
                subject: "Jenkins Build - ${currentBuild.fullDisplayName}",
                body: """
                <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                <p>Allure Report: <a href="${env.BUILD_URL}allure">${env.BUILD_URL}allure</a></p>
                """,
                to: 'vamsipenugurthi52@gmail.com',
                attachLog: true
            )
        }
    }
}
